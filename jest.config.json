{
  "testEnvironment": "node",
  "roots": ["<rootDir>/src"],
  "coveragePathIgnorePatterns": ["<rootDir>/dist/"],
  "testMatch": [
    "<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
    "<rootDir>/src/**/*.{spec,test}.{js,jsx,ts,tsx}"
  ],
  "moduleNameMapper": {
    "@/(.*)": "<rootDir>/src/$1"
  }
}
